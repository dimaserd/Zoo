    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Zoo.GenericUserInterface.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

